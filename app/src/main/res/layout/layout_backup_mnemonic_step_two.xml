<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    >

    <include layout="@layout/layout_title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#e1b631"
        android:letterSpacing="0.2"
        android:lineSpacingExtra="-8sp"
        android:text="确认助记词"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#e5e5e5"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8sp"
        android:text="请按顺序选择助记词，已确认您已经完成备份"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8sp"
        android:text=""
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/shape_gray_cornor18"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:id="@+id/tv_mnemonic"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="18dp"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_gray_cornor9"
        android:text="下一步"
        android:textColor="@color/white"
        android:enabled="true"
        android:textSize="16sp"
        android:layout_marginBottom="48dp"

        />
</LinearLayout>