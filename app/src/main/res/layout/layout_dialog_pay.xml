<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="226dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_cornor4"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信扫码支付"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_name"
        />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="6dp"
        android:id="@+id/iv_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.7sp"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="长按识别二维码"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.7sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:text="¥  4335.00"
        android:layout_marginTop="3dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="完成支付并确认"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_gray_cornor22"
        android:layout_marginTop="10dp"
        android:id="@+id/bt_confirm"
        />
    
</LinearLayout>