<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <fragment
        android:id="@+id/fragment_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="net.sourceforge.UI.fragments.FragmentSample" />

    <fragment
        android:id="@+id/fragment_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="net.sourceforge.UI.fragments.FragmentSample" />


    <fragment
        android:id="@+id/fragment_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="net.sourceforge.UI.fragments.FragmentSample" />
    <fragment
        android:id="@+id/fragment_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="net.sourceforge.UI.fragments.FragmentSample" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/list_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <net.sourceforge.UI.view.NaviTabButton
            android:id="@+id/tabbutton_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <net.sourceforge.UI.view.NaviTabButton
            android:id="@+id/tabbutton_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        
        
        <net.sourceforge.UI.view.NaviTabButton
            android:id="@+id/tabbutton_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <net.sourceforge.UI.view.NaviTabButton
            android:id="@+id/tabbutton_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>